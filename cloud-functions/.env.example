# Environment variables para Cloud Functions
# Copiar a .env.local en la carpeta cloud-functions

# Email Configuration (si usas SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=alertas@tuempresa.com

# SMS Configuration (si usas Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE=+1234567890

# Firebase Configuration
FIREBASE_PROJECT_ID=incidencias-85d73
FIREBASE_DATABASE_URL=https://incidencias-85d73-default-rtdb.firebaseio.com

# Configuración de Notificaciones
NOTIFICACION_EMAIL_SUPERVISORES=true
NOTIFICACION_SMS_SUPERVISORES=false
NOTIFICACION_PUSH_SUPERVISORES=true

# Horarios de Ejecución
VALIDACION_INTERVALO_MINUTOS=5
ZONA_HORARIA=America/Bogota

# Alertas
ALERTA_THRESHOLD_INCUMPLIMIENTOS=3
REPORTE_DIARIO_HORA=08:00

# Debug
DEBUG_LOGS=true
